<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".EscolhaPersonagemActivity"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_thambi"
        android:text="Escolha seu personagem"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="39sp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <GridLayout
            android:id="@+id/imageGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:columnOrderPreserved="false"


            >
            <ImageView
                android:id="@+id/imgMula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mulac_p"
                android:layout_gravity="center"


                />

            <ImageView
                android:id="@+id/imgBoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/boto_p2"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/imgIara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iara_p"

                />
            <ImageView
                android:id="@+id/imgBoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/boi_p"
                />
            <ImageView
                android:id="@+id/imgSaci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sacii_p"
                />
            <ImageView
                android:id="@+id/imgCurupira"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/curupira_p"
                />
        </GridLayout>
    </ScrollView>



</LinearLayout>